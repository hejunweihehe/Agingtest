<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="#000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/l1"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/but_l1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <FrameLayout
                    android:visibility="invisible"
                    android:layout_width="80dp"
                    android:layout_height="40dp" >

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/volp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/but_volumeplus"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/volm"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/but_volumeminus"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <FrameLayout
                    android:visibility="invisible"
                    android:layout_width="80dp"
                    android:layout_height="40dp" >

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/r1"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/but_r1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="100dp" >

            <com.ireadygo.virtualdevice.widget.JoystickView
                android:id="@+id/l_joystick"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/l_value"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="80dp" >

            <Button
                android:id="@+id/x_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/but_x"
                android:textSize="10sp" />

            <Button
                android:id="@+id/b_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/but_b"
                android:textSize="10sp" />

            <Button
                android:id="@+id/a_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/but_a"
                android:textSize="10sp" />

            <Button
                android:id="@+id/y_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignLeft="@+id/a_btn"
                android:layout_alignParentTop="true"
                android:text="@string/but_y"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="110dp" >

            <Button
                android:id="@+id/left_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/but_left"
                android:textSize="12sp" />

            <Button
                android:id="@+id/right_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/but_right"
                android:textSize="12sp" />

            <Button
                android:id="@+id/down_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/but_down"
                android:textSize="12sp" />

            <Button
                android:id="@+id/up_btn"
                android:layout_width="@dimen/key_board_width"
                android:layout_height="@dimen/key_board_height"
                android:layout_alignLeft="@+id/down_btn"
                android:layout_alignParentTop="true"
                android:text="@string/but_up"
                android:textSize="12sp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="140dp" >

            <com.ireadygo.virtualdevice.widget.JoystickView
                android:id="@+id/r_joystick"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/r_value"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
