<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sensor_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_xyz"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/test_sensor_xyz"
            android:textColor="@color/orange"
            android:textSize="18sp" />
                
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrow"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_compass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/compass"
              android:paddingTop="5dp"          
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_precision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:text="@string/test_sensor_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:text="@string/test_sensor_distance"
            android:visibility="gone" />

            <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/test_sensor_tips"
            android:textSize="18sp" />
            
    </LinearLayout>

    <com.android.factorywidget.TestConfirm
        android:id="@+id/sensor_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>