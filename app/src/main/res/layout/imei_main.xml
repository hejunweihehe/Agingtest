<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sim1_old_layout"
        android:paddingTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sim1_old_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="@string/sim1_old_labelstr"
            android:textSize="32px" />

        <TextView
            android:id="@+id/sim1_old_imei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:background="#FFB0B0B0"
            android:textColor="#FF000000"
            android:textSize="32px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sim1_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sim1_new_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="@string/sim1_new_labelstr"
            android:textColor="#FFEE0000"
            android:textSize="32px" />

        <EditText
            android:id="@+id/sim1_new_imei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="15"
            android:numeric="integer"
            android:padding="@dimen/padding_medium"
            android:textSize="32px" />
    </LinearLayout>
   <LinearLayout
        android:id="@+id/sim2_old_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sim2_old_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="@string/sim2_old_labelstr"
            android:textSize="32px" />

        <TextView
            android:id="@+id/sim2_old_imei"
            android:background="#FFB0B0B0"
            android:textColor="#FF000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:textSize="32px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sim2_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sim2_new_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:textColor="#FFEE0000"
            android:text="@string/sim2_new_labelstr"
            android:textSize="32px" />

        <EditText
            android:id="@+id/sim2_new_imei"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="15"
            android:numeric="integer"
            android:padding="@dimen/padding_medium"
            android:textSize="32px" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA5A5A5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/imei1btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/write_imei1" />

            <Button
                android:id="@+id/imei2btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/write_imei2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/readbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/read_imei" />

            <Button
                android:id="@+id/exitbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/imei_exit" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>