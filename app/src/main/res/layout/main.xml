                android:text="@string/but_test_power" />

            <Button
                android:id="@+id/test_gravity_sensor"
                style="@style/main_button_style"
                android:text="@string/but_test_gravity_sensor" />

            <Button
                android:id="@+id/test_magnetic_sensor"
                style="@style/main_button_style"
